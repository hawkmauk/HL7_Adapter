\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{lyrebird-doc-style}[2026/02/16 Lyrebird generated documentation style]

\RequirePackage[T1]{fontenc}
\RequirePackage[utf8]{inputenc}
\RequirePackage{lmodern}
\RequirePackage{xcolor}
\RequirePackage{geometry}
\RequirePackage{titlesec}
\RequirePackage{fancyhdr}
\RequirePackage{hyperref}
\RequirePackage{enumitem}
\RequirePackage{graphicx}
\RequirePackage{array}
\RequirePackage{booktabs}
\RequirePackage{longtable}
\RequirePackage{tcolorbox}
\RequirePackage{setspace}

% Palette inspired by Lyrebird web styling:
% deep navy foundation, teal accent, clean light surfaces.
\definecolor{LyrebirdNavy}{HTML}{0B2545}
\definecolor{LyrebirdTeal}{HTML}{00A7A0}
\definecolor{LyrebirdInk}{HTML}{1E293B}
\definecolor{LyrebirdHeadText}{HTML}{1B1B1B}
\definecolor{LyrebirdMuted}{HTML}{64748B}
\definecolor{LyrebirdSurface}{HTML}{F8FAFC}
\definecolor{LyrebirdBorder}{HTML}{DCE3EA}

\geometry{
  a4paper,
  left=24mm,
  right=24mm,
  top=24mm,
  bottom=28mm
}

\setstretch{1.08}
\setlength{\parindent}{0pt}
\setlength{\parskip}{0.45em}

\hypersetup{
  colorlinks=true,
  linkcolor=LyrebirdTeal,
  urlcolor=LyrebirdTeal,
  citecolor=LyrebirdTeal
}

\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}
\fancyhead[L]{\textcolor{LyrebirdNavy}{\textbf{Lyrebird Documentation}}}
\fancyhead[R]{\textcolor{LyrebirdMuted}{\thepage}}
\fancyfoot[C]{\textcolor{LyrebirdMuted}{Generated from SysML model views}}

\titleformat{\section}
  {\Large\bfseries\color{LyrebirdNavy}}
  {\thesection}
  {0.65em}
  {}

\titleformat{\subsection}
  {\large\bfseries\color{LyrebirdNavy}}
  {\thesubsection}
  {0.55em}
  {}

\titleformat{\subsubsection}
  {\normalsize\bfseries\color{LyrebirdInk}}
  {\thesubsubsection}
  {0.5em}
  {}

% List styling: no bullets for itemize; compact spacing
\setlist[itemize]{label={}, leftmargin=1.4em, itemsep=0.2em, topsep=0.25em}
\setlist[enumerate]{leftmargin=1.6em, itemsep=0.2em, topsep=0.25em}

\renewcommand{\arraystretch}{1.22}

\newcolumntype{Y}{>{\raggedright\arraybackslash}p{0.74\linewidth}}

\newtcolorbox{lyrebirdmeta}{
  colback=LyrebirdSurface,
  colframe=LyrebirdBorder,
  arc=1.5mm,
  boxrule=0.5pt,
  left=2mm,
  right=2mm,
  top=1mm,
  bottom=1mm
}

% Logo: include if lyrebird-logo.pdf exists in current dir (convert from lyrebird-logo.svg if needed)
\newcommand{\LyrebirdLogo}{%
  \IfFileExists{lyrebird-logo.pdf}{%
    \includegraphics[height=2.2em]{lyrebird-logo.pdf}%
  }{}%
}

\newcommand{\LyrebirdDocumentTitle}[3]{%
  \noindent
  \LyrebirdLogo
  \hfill
  {\color{LyrebirdHeadText}\LARGE\textbf{#1}}\par
  \vspace{0.35em}
  \noindent
  \hfill
  {\color{LyrebirdHeadText}\normalsize\texttt{#2} \quad Version: #3}\par
  \vspace{0.7em}
}

% Use case environment: title + small monospace body
\newenvironment{usecase}[1]{%
  \subsubsection*{#1}%
  \begingroup
  \small\ttfamily
}{%
  \par
  \endgroup
}
